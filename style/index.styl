.f
    display flex
    flex 1 0 auto
    flex-wrap nowrap
    position relative
    &.v
        flex-direction column
    &.h
        flex-direction row
    &.z
        flex-wrap wrap


    &.ix
        align-items stretch
    &.io
        align-items center
    &.is
        align-items flex-start
    &.ie
        align-items flex-end
    &.il
        align-items baseline

    &.jo
        justify-content center
    &.js
        justify-content flex-start
    &.je
        justify-content flex-end
    &.ja
        justify-content space-around
    &.jb
        justify-content space-between

    &.xx
        align-content stretch
    &.xo
        align-content center
    &.xs
        align-content flex-start
    &.xe
        align-content flex-end
    &.xa
        align-content space-around
    &.xb
        align-content space-between

    &.yx
        align-self stretch
    &.yo
        align-self center
    &.ys
        align-self flex-start
    &.ye
        align-self flex-end
    &.yl
        align-self baseline

    &.s0>* , >.b0
        flex-basis 0
    &.s1>* , >.b1
        flex-basis 100%
    &.s4>* , >.b4
        flex-basis 25%
    &.s2>* , >.b2
        flex-basis 50%
    &.s5>* , >.b5
        flex-basis 20%

    &.ss>* , > .s
        flex-grow 0
        flex-shrink 0
    &.ww>* , > .w
        flex-grow 1
        flex-shrink 1


    &.rr>* , > .r
        flex-basis 0
    &.__41>* , >._41
        flex-basis 25%
    &.__21>* , >._21
        flex-basis 50%
    &.__51>* , >._51
        flex-basis 20%

.scrollx
    overflow-x auto
    overflow-y hidden
    -webkit-overflow-scrolling  touch
.scrolly
    overflow-x hidden
    overflow-y auto
    -webkit-overflow-scrolling  touch

.scroll
    display flex
    flex-flow column nowrap
    flex 1 1 0
    overflow-y auto
    overflow-x hidden
    -webkit-overflow-scrolling  touch


.abs
    position absolute

.ease
    transition all 1s ease

.pointer
    cursor pointer

.picture, ._picture img
    width 100%
    height 100%

.mt
    margin-top 1em

.mb
    margin-bottom 1em

.mr
    margin-right 1em

.box, ._box>*
    padding .5rem
    &.bb
        border-bottom 1px solid #ddd
    &.wd
        padding 1em 4em 1em 4em
    &.grey
        background-color #E8E8E8

.shadow
    box-shadow rgba(0, 0, 0, 0.12) 0px 1px 1px, rgba(0, 0, 0, 0.12) 0px 2px 4px;
    z-index 888
.txt
    &.grey
        color #888
    &.white
        color white
    &.black
        color black
    &.blue
        color #03F
    &.bold
        font-weight bold
    &.sm
        font-size .6rem
    &.md
        font-size .8rem
    &.lg
        font-size 1.6rem


html
    height 100%
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust: 100%
    font-family  "Helvetica Neue",Tahoma,Arial,PingFangSC-Regular,"Hiragino Sans GB","Microsoft Yahei",sans-serif
    font-size 17.5px
body
    display flex
    margin 0
    min-height 100%
    line-height 1

#app-wrapper
    display flex
    flex 1 1 auto
    flex-flow column

#app
    color #2C3E50
    flex 1 1 auto
    width 100%

.price
    &:before
        content '\A5'
a
    text-decoration none
    &:focus
        box-shadow none